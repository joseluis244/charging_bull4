<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <link rel="stylesheet" href="CSS/Lmes.css">
</head>
<body style="margin: 0px;">
    <main>
        <div class="cabeza">
            <div class="seccionado" onclick="cambiar(this,'scz')">Santa Cruz</div>
            <div onclick="cambiar(this,'lpz')">La Paz</div>
        </div>
        <section id="scz" class="dep_sel">
            <ul class="mdl-list">
                <% var i = 0 %>
                <% while(i<= cli.length-1 && cli[i].ciudad == "Santa Cruz"){ %>
                <li class="mdl-list__item mdl-list__item--two-line <%= GPS_I(i,cli) %>">
                    <span class="mdl-list__item-primary-content" onclick="irficha('<%= cli[i]._id %>')">
                        <span> <%= cli[i].nombre %> </span>
                        <span class="mdl-list__item-sub-title"><%= cli[i].direccion %></span>
                    </span>
                    <% if(GPS_I(i,cli)=="incorrecto"){ %>
                    <span> <i class="material-icons" onclick="verdistancia('<%=cli[i].vitacora[ cli[i].vitacora.length-1 ].GPS[0]%>','<%=cli[i].vitacora[ cli[i].vitacora.length-1 ].GPS[1]%>','<%=cli[i].GPS[0] %>','<%=cli[i].GPS[1] %>')">person_pin_circle</i> </span>
                    <% } %>
                </li>
                <% i++ %>
                <% } %>
            </ul>
        </section>
        <section id="lpz" class="dep_no_sel">
            <ul class="mdl-list">
                <% while(i<= cli.length-1 && cli[i].ciudad == "La Paz"){ %>
                <li class="mdl-list__item mdl-list__item--two-line <%= GPS_I(i,cli) %>">
                    <span class="mdl-list__item-primary-content" onclick="irficha('<%= cli[i]._id %>')">
                        <span><%= cli[i].nombre %></span>
                        <span class="mdl-list__item-sub-title"><%= cli[i].direccion %></span>
                    </span>
                    <% if(GPS_I(i,cli)=="incorrecto"){ %>
                    <span> <i class="material-icons" onclick="verdistancia('<%=cli[i].vitacora[ cli[i].vitacora.length-1 ].GPS[0]%>','<%=cli[i].vitacora[ cli[i].vitacora.length-1 ].GPS[1]%>','<%=cli[i].GPS[0] %>','<%=cli[i].GPS[1] %>')">person_pin_circle</i> </span>
                    <% } %>
                </li>
                <% i++ %>
                <% } %>
            </ul>
        </section>
    </main>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="./JS/Lmes.js"></script>
</body>
</html>
<% 
function GPS_I(i,cli){
    var diflat = cli[i].GPS[0] - cli[i].vitacora[ cli[i].vitacora.length-1 ].GPS[0]
    var diflng = cli[i].GPS[1] - cli[i].vitacora[ cli[i].vitacora.length-1 ].GPS[1]
    if(diflat >= -0.008 && diflat <= 0.008 && diflng >= -0.008 && diflng <= 0.008 ){
        return 'correcto'
    }else{
        return 'incorrecto'
    }
}
%>